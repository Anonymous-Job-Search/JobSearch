{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "npm run typecheck && npm run eslint && npm run prettier && npm run stylelint",
    "lint:fix": "npm run typecheck && npm run eslint:fix && npm run prettier:fix && npm run stylelint:fix",
    "typecheck": "nuxt typecheck",
    "eslint": "eslint . --ext .js,.ts,.vue --ignore-path .gitignore",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier": "prettier . --check --ignore-path .gitignore",
    "prettier:fix": "prettier . --write --ignore-path .gitignore",
    "stylelint": "stylelint **/*.scss --ignore-path .gitignore",
    "stylelint:fix": "npm run stylelint -- --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@element-plus/nuxt": "^1.0.5",
    "@nuxt/test-utils": "^3.5.0",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@nuxtjs/eslint-module": "^4.1.0",
    "@nuxtjs/stylelint-module": "^5.1.0",
    "@types/node": "^18",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitest/coverage-c8": "^0.31.1",
    "element-plus": "^2.3.5",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nuxt": "^3.5.0",
    "normalize.css": "^8.0.1",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "sass-loader": "^13.2.2",
    "stylelint": "^15.6.2",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1",
    "vue-tsc": "^1.6.5"
  }
}
